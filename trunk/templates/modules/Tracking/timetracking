<h2>[% gettext("Time tracking") %]</h2>
<form action="" method="post">
<table>
<tr>
  <td class='info' colspan='2'>[% gettext("Fields marked with * are required") %]</td>
</tr>
[% row = 'even' %]
[% FOREACH key IN timetrackingdb.keys.sort %]
<tr class="[% row %]">
[% data = timetrackingdb.$key %]
[% IF data.type != "hidden" %]
        <td>[% gettext(data.name) %]
        [% IF data.required == 1 %]
                *
        [% END %]
        </td>
        [% IF data.type == 'textfield' %]
		[% IF data.field == 'day' %]
                <td><input  name="[% data.field %]" value="[% datenow %]" /></td>
		[% ELSIF data.field == 'hours' %]
		<td><input  class="small" name="[% data.field %]" />h <input class="small" name="minutes" />min</td>
		[% ELSE %]
                <td><input  name="[% data.field %]" /></td>
		[% END %]
        [% ELSIF data.type == 'textarea' %]
                <td><textarea class="medium" name="[% data.field %]"></textarea></td>
        [% ELSIF data.type == 'selectbox' %]
                <td><select class="medium" name="[% data.field %]">
                <option  value="-1">-- [% gettext("Select") %] --</option>
                [% FOREACH key IN data.data.keys.sort %]
                        [% item = data.data.$key %]
			[% IF item.hidden != 1 %]
				[% IF item.selected == 1 %]
					<option value="[% item.id %]" selected>[% item.name %]
				[% ELSE %]
					<option value="[% item.id %]">[% item.name %]
				[% END %]
				[%- IF item.vat_id == '00000000' %]
					, [% item.firstname %]
				[% END %]
				</option>
			[% END %] 
                [% END %]
                </select>
                </td>
        [% ELSE %]
                <td><p class='error'>[% gettext("Unknown field type") %] '[% data.type %]'</p></td>
        [% END %]
[% END %]
</tr>
[% IF row == 'even' %]
	[% row = 'odd' %]
[% ELSE %]
	[% row = 'even' %]
[% END %]
[% END %]
<tr>
<td colspan='2'>
<p>
<input type="hidden" name="module" value="[% module %]" />
<input type="hidden" name="action" value="writenewhours" />
