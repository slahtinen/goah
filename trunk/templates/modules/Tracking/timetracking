		[% NEXT %]
	[% END %] 

	[% week = daygoals.$key %]
	[% IF even == 1 %] 
		<tr class="even">
		[% even=0 %]
	[% ELSE %]
		<tr class="odd">
		[% even=1 %]
	[% END %]
	
	<td>[% week.number %]</td>
	[% FOREACH dk IN week.keys.sort %]
		[% IF dk.match('[a-z]') %]
			[% NEXT %]
		[% END %]
