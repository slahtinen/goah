[% IF SORTBYD=='checked' && CHECKC=='checked' %]
[% IF SORTDASC == 'checked' %]
&darr;
[% ELSE %]
&uarr;
[% END %]
[% END %]
</th>
<th>[% gettext("Due") %]
[% IF SORTBYD=='checked' && CHECKD=='checked' %]
[% IF SORTDASC == 'checked' %]
&darr;
[% ELSE %]
&uarr;
[% END %]
[% END %]
</th>

<th>[% gettext("Total") %] [% gettext("VAT 0%") %]</th>
