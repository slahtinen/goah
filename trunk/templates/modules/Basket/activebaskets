<h3>[% gettext("Selected baskets") %]</h3>
<table>
<thead>
<tr>
	<th>[% gettext("Customer") %]</th>
	<th>[% gettext("Value VAT0%") %]</th>
	<th>[% gettext("Value") %]</th>
	<th>[% gettext("Rows") %]</th>
	<th>[% gettext("Dates") %]</th>
