			[% selected = 1 %]
		[% END %]
	[% END %] [%# FOREACH s IN search_states %]
	[% IF selected == 1 %]
		<input checked="yes" type="checkbox" name="states" value="[% state.id %]" /> [% state.name %]<br/>
	[% ELSE %]
