	[% ELSE %]
		<tr class="even">
		[% odd = 1 %]
	[% END %]

	<td>[% storage.name %]
	[% IF storage.def == 1 %]
		([% gettext("Default") %])
	[% END %]
	</td>
	<td>[% storage.location %]</td>
	<td>[% storage.info %]</td>
	<td class="center">
	<form action="" method="post">
