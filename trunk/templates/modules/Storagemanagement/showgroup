<tbody class="rowdata">
[% rowc='odd' %]
[% total = 0 %]

[% FOREACH key IN products.keys.sort %]
	[% row = products.$key %]

	<tr class='[% rowc %]'>
	<td><input name="addproducts" value="[% row.id %]" type="checkbox"></td>
	<td>[% row.code %]</td>
	<td>[% row.name %]</td>
	<td><input class="small" name='purchase_[% row.id %]' value='[% row.purchase %]'></td>
	<td><input class="small" name='amount_[% row.id %]' value='1'></td>
	</tr>

	[% IF rowc == 'odd' %]
		[% rowc = 'even' %]
	[% ELSE %]
		[% rowc = 'odd' %]
	[% END %]
[% END %]

[% rowc = 'info' %]

<tr class="[% rowc %]">
<td colspan='7'><input type='submit' value="[% gettext("Add to shipment") %]"></td>
</tr>
</tbody>
</table>
