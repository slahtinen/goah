		[% IF companies.$key.vat_id == '00000000' %]
			<option value='[% companies.$key.id %]'>[% companies.$key.name %] [% companies.$key.firstname %]</option>
		[% ELSE %]
			<option value='[% companies.$key.id %]'>[% companies.$key.name %]</option>
		[% END %]
	[% END %]
	</select>&nbsp;&nbsp;
